

<h2>Here are all the contacts:</h2>

<% @all_contacts.each do |contact| %>
	<p>First Name: <%= contact.first_name %></p>
	<p>Last Name: <%= contact.last_name %></p>
	<p>Email: <%= contact.email %></p>
	<p>Phone #: <%= contact.phone_with_japanese_prefix %></p>
	<a href="/contacts/<%= contact.id %>"><button type="button" class="btn btn-primary">Click here to show this contact!</button></a>
	<br>
	<br>
<% end %>



